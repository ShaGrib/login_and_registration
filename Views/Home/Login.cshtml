@{
    ViewData["Title"] = "Home Page";
}

@model LoggedUser

<div class="d-flex justify-content-between my-4">
    <div class="text-center">
        <h1>Login to this Cool Site!</h1>
    </div>
    <div>
        <a href="/">Register</a>
    </div>
</div>
<div>
    <form action="/login" method="post">
        <div class="row">
            <div class="col">
                <label for="LoggedEmail">Email</label>
                <input asp-for="LoggedEmail" class="form-control">
                <span asp-validation-for="LoggedEmail" class="text-danger"></span>
            </div>
            <div class="col"></div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="col">
                <label for="LoggedPassword">Password</label>
                <input asp-for="LoggedPassword" class="form-control">
                <span asp-validation-for="LoggedPassword" class="text-danger"></span>
            </div>
            <div class="col"></div>
            <div class="col"></div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <input type="submit" value="Sign in Now" class="btn btn-secondary">
            </div>
            <div class="col"></div>
            <div class="col"></div>
        </div>
    </form>
</div>